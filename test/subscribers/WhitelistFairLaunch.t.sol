            _whitelistParams: FlaunchZap.WhitelistParams({
                merkleRoot: _root,
                merkleIPFSHash: _ipfs,
                maxTokens: _maxTokens
            }),
            _airdropParams: FlaunchZap.AirdropParams({
                airdropIndex: 0,
                airdropAmount: 0,
                airdropEndTime: 0,
