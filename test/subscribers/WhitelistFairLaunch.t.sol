            _flaunchParams: PositionManager.FlaunchParams({
                name: 'Token',
                symbol: 'TKN',
                tokenUri: VALID_MERKLE_IPFS,
                initialTokenFairLaunch: INITIAL_TOKEN_FAIR_LAUNCH,
                fairLaunchDuration: 30 minutes,
                premineAmount: 0,
                creator: address(this),
