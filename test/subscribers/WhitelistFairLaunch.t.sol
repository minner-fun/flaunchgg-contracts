        // Make a call with the (now) unapproved, approved caller
        vm.startPrank(_approvedCaller);

        vm.expectRevert(WhitelistFairLaunch.CallerNotWhitelistZap.selector);
        whitelistFairLaunch.setWhitelist({
            _poolId: VALID_POOL_ID,
